{
  "name": "deno_imap",
  "version": "0.1.0",
  "description": "A modern IMAP client for Deno",
  "tasks": {
    "dev": "deno run --watch mod.ts",
    "test": "deno test --allow-net",
    "lint": "deno lint",
    "fmt": "deno fmt"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/encoding": "jsr:@std/encoding@1"
  },
  "exports": {
    ".": "./mod.ts",
    "./types": "./src/types/mod.ts"
  },
  "fmt": {
    "indentWidth": 2,
    "singleQuote": true,
    "lineWidth": 100
  }
}
